{
  "name": "clickalicious/webserver-daemon",
  "description": "Small utility to demonize PHP's internal webserver.",
  "type": "library",
  "authors": [
    {
      "name": "Benjamin Carl",
      "email": "opensource@clickalicious.de",
      "homepage": "https://www.clickalicious.de",
      "role": "Lead"
    }
  ],
  "minimum-stability": "stable",
  "prefer-stable": true,
  "require": {
    "php": ">=5.6.0",
    "roave/security-advisories": "dev-master as 1.0.x-dev",
    "clickalicious/rng": "^3.0",
    "beberlei/assert": "^2.7"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.7",
    "codacy/coverage": "^1.0.5",
    "symfony/var-dumper": "^3.2"
  },
  "autoload": {
    "psr-4": {
      "Clickalicious\\Webserver\\Daemon\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Clickalicious\\Webserver\\Daemon\\": "tests/"
    },
    "files": [
      "demo/env.php"
    ]
  },
  "keywords": [
    "webserver-daemon",
    "webserver",
    "php",
    "daemon",
    "demon",
    "demonize",
    "unittest",
    "control",
    "init"
  ],
  "homepage": "https://clickalicious.github.io/webserver-daemon",
  "license": "MIT",
  "support": {
    "email": "opensource@clickalicious.de",
    "issues": "https://github.com/clickalicious/webserver-daemon/issues",
    "wiki": "https://github.com/clickalicious/webserver-daemon/wiki",
    "tests": "https://clickalicious.github.io/webserver-daemon"
  },
  "config": {
    "bin-dir": "bin",
    "preferred-install": "dist"
  }
}
